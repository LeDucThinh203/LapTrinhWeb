@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LapTrinhWeb</title>
    <script type="importmap"></script>    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/product-management.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LapTrinhWeb.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
        .navbar {
            min-height: 100px;
            font-size: 1.15rem;
            display: flex;
            align-items: center;
            z-index: 1050 !important;
            position: relative;
        }
        .navbar .container-fluid {
            display: flex;
            align-items: center;
            height: 100px;
        }
        .navbar .navbar-nav {
            display: flex;
            align-items: center;
            height: 100px;
            justify-content: center;
            width: 100%;
        }
        .navbar .navbar-nav .nav-link {
            display: flex;
            align-items: center;
            height: 100px;
            padding-top: 0;
            padding-bottom: 0;
        }
        .navbar .navbar-brand img {
            height: 70px !important;
            margin-right: 20px;
        }
        .navbar .d-flex.align-items-center {
            align-items: center !important;
            height: 100px;
            display: flex;
            gap: 18px; /* Khoảng cách giữa các icon */
        }        .navbar form.d-flex {
            align-items: center;
            height: 100px;
            display: flex;
        }
        .navbar .search-form {
            width: 300px;
            margin-right: auto; /* Đẩy thanh tìm kiếm sát trái */
        }
        .navbar .navbar-icons {
            display: flex;
            align-items: center;
            gap: 28px; /* Tách icon người dùng và giỏ hàng xa nhau hơn */
            margin-left: 40px;
        }
        .navbar .dropdown-toggle {
            display: flex;
            align-items: center;
            height: 100%;
        }
        .navbar .cart-wrapper {
            display: flex;
            align-items: center;
            height: 100%;
        }
        .navbar .bi-person, .navbar .bi-cart {
            font-size: 1.7rem;
            vertical-align: middle;
            display: flex;
            align-items: center;
        }
        .navbar .badge.bg-danger {
            position: absolute;
            top: 60%;
            left: 60%;
            transform: translate(-50%, -10%);
            font-size: 0.9rem;
            padding: 0.2em 0.6em;
            border-radius: 1rem;
            line-height: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="http://localhost:5021/Home/Index">
                    <img src="/images/logo.png" alt="Coolmate Logo" style="height: 40px;">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto mb-2 mb-lg-0" style="float:none;">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="#">OUTLET</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">NAM</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">NỮ</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">THỂ THAO</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">CARE & SHARE</a>                        </li>
                    </ul>
                    <form class="d-flex search-form" action="/Home/Search" method="get">
                        <input class="form-control me-0" type="search" name="query" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Tìm kiếm</button>
                    </form>
                    <div class="navbar-icons">
                        <div class="dropdown">
                            <a href="#" class="dropdown-toggle" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                @if (SignInManager.IsSignedIn(User))
                                {
                                    <li class="dropdown-item text-muted">
                                        <i class="bi bi-person-circle me-2"></i>
                                        <span>@User.Identity?.Name</span>
                                    </li>
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage">
                                            <i class="bi bi-gear me-2"></i>Quản lý tài khoản
                                        </a>
                                    </li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li>
                                            <a class="dropdown-item text-danger fw-bold" asp-area="Admin" asp-controller="Dashboard" asp-action="Index">
                                                <i class="bi bi-shield-lock me-2"></i>Admin Dashboard
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider" /></li>
                                    <li>
                                        <form method="post" asp-area="Identity" asp-page="/Account/Logout" id="logoutForm" class="d-inline">
                                            <button type="submit" class="dropdown-item">
                                                <i class="bi bi-box-arrow-right me-2"></i>Đăng xuất
                                            </button>
                                        </form>
                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">
                                            <i class="bi bi-box-arrow-in-right me-2"></i>Đăng nhập
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">
                                            <i class="bi bi-person-plus me-2"></i>Đăng ký
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                        <a href="/Home/Cart" class="cart-wrapper position-relative">
                            <i class="bi bi-cart"></i>
                            <span class="badge bg-danger">
                                @{
                                    // Đếm số loại sản phẩm khác nhau trong giỏ
                                    var products = new[] {
                                        new { Id = 1 },
                                        new { Id = 2 },
                                        new { Id = 3 }
                                    };
                                    int cartTypeCount = 0;
                                    foreach (var p in products)
                                    {
                                        if ((Context.Session.GetInt32($"Cart_Product_{p.Id}") ?? 0) > 0)
                                        {
                                            cartTypeCount++;
                                        }
                                    }
                                }
                                @cartTypeCount
                            </span>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container-fluid">
