@model LapTrinhWeb.Models.Product
@{
    ViewData["Title"] = Model.Name;
}
<div class="container my-5">
    <div class="row">
        <div class="col-md-5">
            <img src="@Model.Image" alt="@Model.Name" class="img-fluid rounded shadow" style="max-height:400px;object-fit:cover;">
        </div>
        <div class="col-md-7">
            <h2>@Model.Name</h2>
            <p class="fw-bold text-danger" style="font-size:1.5rem;">@Model.Price.ToString("N0") đ</p>
            <p>@Model.Description</p>
            <form method="post" action="@Url.Action("AddToCart", "Home")">
                <input type="hidden" name="productId" value="@Model.Id" />
                <button type="submit" class="btn btn-primary btn-lg">Thêm vào giỏ</button>
            </form>
            <div class="mt-3">
                <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Quay lại trang chủ</a>
            </div>
        </div>
    </div>
</div>