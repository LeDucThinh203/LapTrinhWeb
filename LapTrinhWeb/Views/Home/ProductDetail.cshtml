@{
    var p = ViewBag.Product;
    ViewData["Title"] = p.Name;
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-5">
            <img src="@p.Image" alt="@p.Name" class="img-fluid rounded shadow" style="max-height:400px;object-fit:cover;">
        </div>
        <div class="col-md-7">
            <h2>@p.Name</h2>
            <p class="fw-bold text-danger" style="font-size:1.5rem;">@String.Format("{0:N0} đ", p.Price)</p>
            <p>@p.Description</p>
            <form method="post" action="/Home/AddToCart">
                <input type="hidden" name="productId" value="@p.Id" />
                <button type="submit" class="btn btn-primary btn-lg">Thêm vào giỏ</button>
            </form>
            <div class="mt-3">
                <a href="/Home/Index" class="btn btn-secondary">Quay lại trang chủ</a>
            </div>
        </div>
    </div>
</div>